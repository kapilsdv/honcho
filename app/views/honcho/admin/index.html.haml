%di.ui.stackable.grid
  %div.twelve.wide.column
    %h2
      = "Listing #{resource_name}"
    Download:
    - download_links.each do |format|
      = link_to format.upcase, honcho.send("#{resource_name.downcase}_path", format: format.downcase)

    = paginate @resources

    %table.ui.basic.table
      %thead
        %tr
          %th=check_box_tag :select_all , true, false, id: 'selectAll'
          %th= sortable 'id'
          - klass.table_attributes.each do |attribute|
            %th
              = sortable attribute
          %th Show
          %th Edit
          %th Destroy

      %tbody
        - @resources.each do |resource|
          %tr
            %td=check_box_tag 'resource', resource.id, false
            %td=resource.id
            - resource.attributes.each do |k,v|
              %td= v
            %td= link_to 'Show', honcho.send("#{singularize_resource}_path",resource.id), class: 'ui teal button'
            %td= link_to 'Edit', resource_url("edit", resource), class: 'ui yellow button'
            %td= link_to 'Destroy', honcho.send("#{singularize_resource}_path", resource.id), data: { method: :delete, confirm: 'Are you sure?', alert: { class: 'alert-box alert round' } }, class: 'ui red button'
    %br

    = paginate @resources

    = link_to "Create New #{resource_name}", honcho.send("new_#{singularize_resource}_path"), class: 'button round small'

  %div.four.wide.column
    = render 'search'
